<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/bookmarkBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/view_bookmark_background"/>

    <View
        android:id="@+id/bookmarkBackgroundText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/view_bookmark_background_text"/>

    <TextView
        android:id="@+id/textValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/bookmarkBackgroundText"
        app:layout_constraintBottom_toBottomOf="@id/bookmarkBackgroundText"
        app:layout_constraintStart_toStartOf="@id/bookmarkBackgroundText"
        app:layout_constraintEnd_toEndOf="@id/bookmarkBackgroundText"
        tools:text="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>